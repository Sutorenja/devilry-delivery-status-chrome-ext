{
  "manifest_version": 3,
  "name": "DEVELOPMENT VERSION Devilry delivery status",
  "description": "A simple chrome extension for https://devilry.ifi.uio.no/ that provides minor quality of life changes to the site.",
  "version": "1.2.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/options.js",
        "scripts/lang.js",
        "scripts/content.js",
        "scripts/nightmode.js"
      ],
      "matches": [
        "https://devilry.ifi.uio.no/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": ["images/icon-48-settings.png"],
      "matches": ["https://devilry.ifi.uio.no/*"]
    },
    {
      "resources": ["options.html"],
      "matches": ["https://devilry.ifi.uio.no/*"]
    }
  ]
}